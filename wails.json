{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "author": {
    "email": "dev@urlnavigator.com",
    "name": "URLNavigator"
  },
  "build": {
    "compiler": "go",
    "flags": [
      "-tags",
      "production",
      "-trimpath"
    ],
    "ldflags": [
      "-s",
      "-w",
      "-X main.Version={{.Info.Version}}",
      "-X main.GitHubOwner={{.GitHub.Owner}}",
      "-X main.GitHubRepo={{.GitHub.Repo}}"
    ]
  },
  "buildSettings": {
    "embedVersionInfo": true,
    "generateVersionInfo": true
  },
  "frontend": {
    "build": "yarn build",
    "dev": "yarn dev",
    "dir": "./frontend",
    "install": "yarn install",
    "package": {
      "manager": "yarn"
    }
  },
  "github": {
    "comment": "GitHub repository information for auto-update functionality",
    "owner": "wangyaxings",
    "repo": "url-navigator"
  },
  "info": {
    "companyName": "URLNavigator",
    "copyright": "Copyright æ¿ ?2025 URLNavigator. All rights reserved.",
    "productDescription": "A beautiful URL bookmark manager with auto-update functionality",
    "productName": "URL Navigator",
    "version": "1.4.0"
  },
  "name": "URLNavigator",
  "nsisType": "single",
  "outputfilename": "URLNavigator"
}